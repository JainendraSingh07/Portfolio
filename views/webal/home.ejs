<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Including jQuery library -->
    <link rel="stylesheet" href="<%= assetPath('css/home.css') %>">
    <link rel="stylesheet" href="<%= assetPath('css/post.css') %>">
    <link rel="stylesheet" href="<%= assetPath('css/user_sign_up.css') %>">
    
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <!-- <h1>WebAL / <%= title %></h1> -->
    <div>
        <section id="feed-posts">
            <h4>Posts</h4>
            <% if(locals.user) { %>
            <form action="/message/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
                <input type="submit" value="Post">
            </form>
            <% } %>

            <div id="posts-list-container">
                <ul>
                    <% posts.forEach(post => { %>
                        <%- include('../partials/_post', { post: post }) %>
                    <% }) %>
                </ul>
            </div>
        </section>

        <section id="user-friends">
            <h4>Friends</h4>
            <% for(u of all_users){ %>
                <p>
                    <a href="/message/user/profile/<%= u.id %>"><%= u.username %></a>
                </p>
            <% } %>
        </section>

        <%- include('../partials/_chat_box') -%>
    </div>

   
    
    <!-- Including your JavaScript files -->
    <script src="/js/home_post_comments.js"></script>
    <script src="/js/home_posts.js"></script>
    <script src="/js/toggle_likes.js"></script>
   

    

    <script>
        $(document).ready(function() {
            // Initialize toggle like buttons when document is ready
            $('.toggle-like-button').each(function() {
                let self = this;
                let toggleLike = new ToggleLike(self);
            });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.5/socket.io.js"></script>
    <script src="/js/chat_engine.js"></script>
    <% if (locals.user) { %>
        <script>
            // Initialize the ChatEngine with user's email
            new ChatEngine('user-chat-box', '<%= locals.user.username %>');
        </script>
    <% } %>
</body>
</html>
